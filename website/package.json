{
	"name": "website",
	"version": "1.0.0",
	"private": true,
	"dependencies": {
		"@docusaurus/core": "2.0.0-rc.1",
		"@docusaurus/plugin-google-gtag": "2.0.0-rc.1",
		"@docusaurus/preset-classic": "2.0.0-rc.1",
		"@mdx-js/react": "^1.6.22",
		"@sass-fairy/break": "^1.1.0",
		"@sass-fairy/color": "^1.0.1",
		"@svgr/webpack": "^6.2.1",
		"clsx": "^1.1.1",
		"docusaurus-plugin-sass": "roydukkey/docusaurus-plugin-sass#issue/20",
		"docusaurus-theme-frontmatter": "^1.3.0",
		"file-loader": "^6.2.0",
		"prism-react-renderer": "^1.3.1",
		"raw-loader": "^4.0.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"url-loader": "^4.1.1",
		"webpack": "^5.70.0"
	},
	"devDependencies": {
		"@docusaurus/module-type-aliases": "2.0.0-rc.1",
		"@tsconfig/docusaurus": "^1.0.5"
	},
	"scripts": {
		"docusaurus": "docusaurus",
		"start": "docusaurus start --no-open",
		"build": "docusaurus build",
		"swizzle": "docusaurus swizzle",
		"deploy": "docusaurus deploy",
		"clear": "docusaurus clear",
		"serve": "docusaurus serve",
		"write-translations": "docusaurus write-translations",
		"write-heading-ids": "docusaurus write-heading-ids",
		"typecheck": "tsc",
		"lint": "eslint --ext js,jsx,ts,tsx ./"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"@docusaurus/core/lib/babel/preset"
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@roydukkey/eslint-config"
		],
		"env": {
			"node": true
		},
		"overrides": [
			{
				"files": [
					"*.js?(x)"
				],
				"rules": {
					"@typescript-eslint/no-require-imports": "off"
				}
			},
			{
				"files": [
					"*.{j,t}s?(x)"
				],
				"rules": {
					"@typescript-eslint/naming-convention": [
						"error",
						{
							"selector": "default",
							"format": [
								"camelCase"
							],
							"filter": {
								"regex": "^(.*?(Component)|sidebar_(label|class_name))$",
								"match": false
							}
						},
						{
							"selector": "default",
							"modifiers": [
								"unused"
							],
							"filter": {
								"regex": "^.*?(Component)$",
								"match": false
							},
							"format": [
								"camelCase"
							],
							"leadingUnderscore": "require"
						},
						{
							"selector": [
								"typeLike",
								"enumMember"
							],
							"format": [
								"PascalCase"
							]
						},
						{
							"selector": "property",
							"modifiers": [
								"private"
							],
							"format": [
								"camelCase"
							],
							"leadingUnderscore": "require"
						},
						{
							"selector": "interface",
							"format": [
								"PascalCase"
							],
							"custom": {
								"regex": "^I[A-Z]",
								"match": false
							}
						}
					]
				}
			}
		]
	}
}
