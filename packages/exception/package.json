{
	"name": "@sass-fairy/exception",
	"description": "Provides Sass functions to standardize exception messages and assist with common validation",
	"version": "1.0.0",
	"keywords": [
		"throw",
		"error",
		"warn"
	],
	"main": "./index.sass",
	"scripts": {
		"prepack": "clean-package --config $npm_package_config_clean_package",
		"new:pack": "yarn pack && clean-package restore --config $npm_package_config_clean_package",
		"new:publish": "yarn publish && clean-package restore --config $npm_package_config_clean_package"
	},
	"config": {
		"clean-package": "../../clean-package.config.js"
	},
	"publishConfig": {
		"access": "public"
	}
}
