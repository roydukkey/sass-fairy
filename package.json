{
	"name": "sass-fairy",
	"private": true,
	"workspaces": [
		"packages/*",
		"website"
	],
	"author": {
		"name": "roydukkey",
		"email": "contact@changelog.me",
		"url": "http://changelog.me"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/roydukkey/sass-fairy.git",
		"branch": "dev/v2"
	},
	"homepage": "https://github.com/roydukkey/sass-fairy#readme",
	"bugs": {
		"url": "https://github.com/roydukkey/sass-fairy/issues"
	},
	"keywords": [
		"sass",
		"scss",
		"dart-sass"
	],
	"files": [
		"/dist",
		"/src/**/*.s{a,c}ss",
		"/CHANGELOG.md",
		"/LICENSE",
		"/*.s{a,c}ss",
		"/README.md"
	],
	"devDependencies": {
		"@rollup/plugin-json": "^4.1.0",
		"@roydukkey/eslint-config": "^2.0.4",
		"@tsconfig/node12": "^1.0.11",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"clean-package": "^2.1.1",
		"cross-env": "^7.0.3",
		"cspell": "^5.19.3",
		"eslint": "^8.26.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"fs-extra": "^10.0.1",
		"globby": "^11.1.0",
		"jest": "^28.1.0",
		"jest-environment-node-single-context": "^28.0.0",
		"npm-run-all": "^4.1.5",
		"replace-in-file": "^6.3.2",
		"rollup": "^2.73.0",
		"rollup-plugin-ts": "^3.0.2",
		"rollup-plugin-license": "^2.8.1",
		"sass": "^1.52.0",
		"sass-true": "^7.0.0-beta.0",
		"typescript": "~4.7.4"
	},
	"engines": {
		"npm": "please-use-yarn",
		"yarn": ">= 1.22.0"
	},
	"scripts": {
		"postinstall": "tsc ./utils/build.ts",
		"clean": "run-s clean:src clean:website",
		"clean:src": "node -e \"require('globby').sync('./packages/**/dist', { onlyDirectories: true }).forEach((path) => fs.rmSync(path, { recursive: true, force: true }))\"",
		"clean:website": "yarn workspace website clear",
		"lint": "run-s lint:spelling lint:src lint:website",
		"lint:spelling": "cspell --config './.vscode/cSpell.json' --no-progress '**/{.*/**/,.*/**/.,,.}*'",
		"lint:src": "eslint './**/*.?(m|c){j,t}s?(x)'",
		"lint:website": "yarn workspace website lint",
		"pretest": "run-s lint:spelling lint:src",
		"test": "jest",
		"build": "run-s build:exception build:color build:math build:meta build:list build:map build:string build:url build:break",
		"build:break": "cross-env BUILD=break yarn bundle:rollup",
		"build:color": "cross-env BUILD=color yarn bundle:rollup",
		"build:exception": "cross-env BUILD=exception yarn bundle:rollup",
		"build:list": "cross-env BUILD=list yarn bundle:rollup",
		"build:map": "cross-env BUILD=map yarn bundle:rollup",
		"build:math": "cross-env BUILD=math yarn bundle:rollup",
		"build:meta": "cross-env BUILD=meta yarn bundle:rollup",
		"build:string": "cross-env BUILD=string yarn bundle:rollup",
		"build:url": "cross-env BUILD=url yarn bundle:rollup",
		"bundle:rollup": "rollup --config ./rollup.config.cts --configPlugin rollup-plugin-ts",
		"bundle:clean-package": "clean-package ./packages/$BUILD/package.json ./packages/$BUILD/package.backup",
		"bundle:clean-package:restore": "clean-package restore ./packages/$BUILD/package.json ./packages/$BUILD/package.backup",
		"package": "yarn bundle:clean-package && yarn workspace @$npm_package_name/$BUILD pack && yarn bundle:clean-package:restore",
		"publish-package": "run-s clean build test bundle:clean-package && yarn workspace @$npm_package_name/$BUILD publish --tag next && yarn bundle:clean-package:restore",
		"serve": "yarn workspace website start",
		"deploy": "cross-env GIT_USER=roydukkey USE_SSH=true yarn workspace website deploy"
	},
	"jest": {
		"testEnvironment": "jest-environment-node-single-context",
		"verbose": true,
		"coverageDirectory": ".jest/coverage",
		"cacheDirectory": ".jest/cache"
	},
	"eslintConfig": {
		"root": true,
		"extends": "@roydukkey/eslint-config",
		"env": {
			"node": true
		},
		"ignorePatterns": [
			"website",
			"utils/**/*.js"
		]
	}
}
